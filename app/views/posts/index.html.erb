






  
 
  <p id="notice"><%= notice %></p>

  <br>
  <h5>Welcome <%= current_user.username %></h5>
  

  
  <h1>Blog Posts</h1>

  <table class="table",>
    <thead>
      <tr>
        <th style="text-align:center">Title</th>
        <th style="text-align:center">Author</th>
        <th style="text-align:center">Blog entry</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %> by <%= link_to post.user.username, user_posts_path(name: post.user.username) %></td>
          <td><%= post.user.username %> </td>
          <td><%= post.blog_entry.html_safe %></td>
          <td><%= link_to 'Show', post, style: "color:seashell; font-family:comic sans ms", class: "btn btn-warning" %></td>
          <td><%= link_to 'Edit Post', edit_post_path(post), style: "color:seashell; font-family:comic sans ms", class: "btn btn-primary" %></td>
          <td><%= link_to 'Delete', post, method: :delete, data: { confirm: 'Are you sure?' }, style: "color:seashell; font-family:comic sans ms", class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

 <%= paginate @posts%>



  <%= link_to 'New Post', new_post_path, style: "float:left;color:seashell", class: "btn btn-success" %>




