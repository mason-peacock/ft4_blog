<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Author:</strong>
  <%= @post.user.email %>
</p>

<p>
  <strong>Blog entry:</strong>
  <%= @post.blog_entry.html_safe %>
</p>

<% if !@post.user.avatar.url.blank? %>
<%= image_tag @post.user.avatar.url %>
<% end %>

<div>
	<%= render 'comments/form', comment: @comment %>
</div>

<% @post.comments.each do |comment| %>
	<p>
		<%= comment.user.email %> says... <br/>
		<%= comment.comment_entry %>
	</p>
<% end %>

<%= link_to 'Edit', edit_post_path(@post), class: "btn btn-primary", style: "color:seashell" %> |
<%= link_to 'Back', posts_path, class: "btn btn-danger", style: "color:seashell" %>
