



<p id="notice"><%= notice %></p>



  <h1>Comments</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Author</th>
        <th>Comment entry</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @comments.each do |comment| %>
        <tr>
          <td><%= comment.author %></td>
          <td><%= comment.comment_entry %></td>
          <td><%= link_to 'Show', comment, style: "color:seashell; font-family:comic sans ms", class: "btn btn-warning" %></td>
          <td><%= link_to 'Edit', edit_comment_path(comment), style: "color:seashell; font-family:comic sans ms", class: "btn btn-primary" %></td>
          <td><%= link_to 'Destroy', comment, method: :delete, data: { confirm: 'Are you sure?' }, style: "color:seashell; font-family:comic sans ms", class: "btn btn-danger" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Comment', new_comment_path, style: "color:#888888", class: "btn btn-default" %>


